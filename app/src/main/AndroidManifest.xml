<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.kirikcoders.bitcse">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Settings.FeedbackActivity"
            android:label="Feedback"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Settings.AboutActivity"
            android:label="About"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Settings.OpenSourceActivity"
            android:label="Open Source Licences"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tools.StudentDetails.StudentInfoActivity"
            android:label="Student Info"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tools.FindRoomActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tools.FindProfessor.SearchFacultyActivity"
            android:label="Find A Professor"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".tools.MarksActivity"
            android:label="Internal Marks"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tools.AttendenceActivity"
            android:label="Attendance"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".tools.SGPAActivity"
            android:label="SGPA Calculator"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".auth.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".events.CreateEventActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".events.ViewEventActivity"
            android:label="@string/title_activity_view_event"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".tools.FacultyDetailsActivity"
            android:label="Faculty Details"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".events.MyEventsActivity"
            android:label="MyEventsActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>