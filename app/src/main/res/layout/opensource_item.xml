<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/open_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Glide"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/open_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="45dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="https://github.com/bumptech/glide"
            android:textColorLink="@color/design_default_color_primary_dark" />

        <TextView
            android:id="@+id/open_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="5dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="BSD, part MIT and Apache 2.0. See the LICENSE file for details.  "
            android:textColorLink="@color/design_default_color_primary_dark"
            android:lineSpacingExtra="5dp"/>
    </RelativeLayout>
</LinearLayout>